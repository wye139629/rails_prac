<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Title</th>
      <th>Content</th>
      <th>Publish date</th>
      <th>ISBN</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>

        <td><%= image_tag book.avatar_url if book.avatar_url.present? %></td>
        <td><%= book.title %></td>
        <td><%= book.content %></td>
        <td><%= book.publish_date %></td>
        <td><%= book.ISBN %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path %>
